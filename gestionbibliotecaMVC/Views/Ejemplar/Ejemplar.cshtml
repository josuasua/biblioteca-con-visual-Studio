@model GestionBibliotecaMVC.Models.Ejemplar

@{
    ViewBag.Title = "Ejemplar";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}


<section>
    @using (Html.BeginForm("save", "Ejemplar", FormMethod.Post)) {
        //si lo mando como parametro hidden lo puedo, mostrar y devolver dentro del objeto sin tener que modificarlo
        @Html.HiddenFor(model => model.CodEjemplar)
        @Html.HiddenFor(model => model.CodLibro)
        @Html.HiddenFor(model => model.CodigoAutor)

        @Html.ValidationSummary(false, "", new {
        @class = "text-danger"
    })
        <div class="form-group">
            <div class="col-lg-12">
                <div class="col-lg-2">
                    @Html.LabelFor(model => model.Titulo, htmlAttributes: new {
                   @class = ""
               })
                </div>
                @Html.HiddenFor(model => model.Titulo)
                <div class="col-lg-4">
                    <p>@Model.Titulo</p>
                </div>
                <!--
                <div class="col-lg-1">
                    @Html.EditorFor(model => model.Titulo, new { htmlAttributes = new {@class = ""}})
                </div>
                @Html.ValidationMessageFor(model => model.Titulo, "", new { @class = "" })-->
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-12">
                <div class="col-lg-2">
                    <label>Editorial</label>
                </div>
                <div class="col-lg-2">
                    @Html.DropDownListFor(model => Model.CodEditorial, new SelectList(ViewBag.EditorialList as System.Collections.IEnumerable, "CodEditorial", "Nombre", Model.CodEditorial), new {
               @class = "form-control"})
                </div>
                @Html.ValidationMessageFor(model => model.CodEditorial)
            </div>
        </div>
            <div class="form-group">
                <div class="col-lg-12">
                    <div class="col-lg-2">
                        @Html.LabelFor(model => model.ISBN, htmlAttributes: new {
                       @class = ""
                   })
                    </div>
                    <div class="col-lg-2">
                        @Html.EditorFor(model => model.ISBN, new {
                       htmlAttributes = new {
                           @class = ""
                       }
                   })
                    </div>
                    @Html.ValidationMessageFor(model => model.ISBN, "", new {
                   @class = ""
               })
                </div>
            </div>
        <div class="form-group">
            <div class="col-lg-12">
                <div class="col-lg-2">
                    @Html.LabelFor(model => model.NumPaginas, htmlAttributes: new {
                           @class = ""
                       })
                </div>
                <div class="col-lg-2">
                    @Html.EditorFor(model => model.NumPaginas, new {
                           htmlAttributes = new {
                               @class = ""
                           }
                       })
                </div>
                @Html.ValidationMessageFor(model => model.NumPaginas, "", new {
                       @class = ""
                   })
            </div>
        </div>
                <div class="form-group">
                    <div class="col-lg-12">
                        <div class="col-lg-2">
                            @Html.LabelFor(model => model.FPublicacion, htmlAttributes: new {
                           @class = ""
                       })
                        </div>
                        <div class="col-lg-2">
                            @Html.EditorFor(model => model.FPublicacion, new {
                           htmlAttributes = new {
                               @class = "", placeholder = "dd/MM/yyyy"
                           }
                       })
                        </div>
                        @Html.ValidationMessageFor(model => model.FPublicacion, "", new {
                       @class = ""
                   })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-2">
                        <button type="submit" class="btn btn-success">Guardar</button>
                    </div>
                    <div class="col-lg-2">
                        @Html.ActionLink("Cancelar", "Index", new {codLibro = Model.CodLibro}, htmlAttributes: new {
                       @class = "btn btn-danger"
                   })
                    </div>
                </div>
    }

</section>